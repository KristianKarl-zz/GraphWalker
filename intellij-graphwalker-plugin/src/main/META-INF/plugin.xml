<!DOCTYPE idea-plugin PUBLIC "Plugin/DTD" "http://plugins.intellij.net/plugin.dtd">
<idea-plugin>
    <!-- Plugin name -->
    <name>GraphWalker Plugin</name>

    <!-- Description -->
    <description>Integrates GraphWalker to the IntelliJ environment</description>

    <!-- Plugin version -->
    <version>3.0</version>

    <!-- Plugin's vendor -->
    <vendor url="http://www.graphwalker.org" email="info@graphwalker.org">graphwalker.org</vendor>

    <application-components>
        <component>
            <implementation-class>org.graphwalker.intellij.plugin.GraphWalkerEditorProvider</implementation-class>
        </component>
    </application-components>

    <!-- Plugin's application components -->
    <project-components>
        <component>
            <!-- Component's implementation class -->
            <implementation-class>org.graphwalker.intellij.plugin.GraphWalkerPlugin</implementation-class>

            <!-- Component's interface class -->
            <interface-class>org.graphwalker.intellij.plugin.GraphWalkerPlugin</interface-class>
        </component>
    </project-components>

    <actions>
        <group id="GraphWalkerGroup"
               text="GraphWalker"
               popup="true"
               class="org.graphwalker.intellij.plugin.actions.GraphWalkerGroup">

            <action id="GraphWalkerAbout" class="org.graphwalker.intellij.plugin.actions.AboutGraphWalkerAction"
                    text="About GraphWalker"
                    description="Shows information about the GraphWalker Plugin"/>

            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </group>
    </actions>


</idea-plugin>
